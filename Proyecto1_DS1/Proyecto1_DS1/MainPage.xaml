<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto1_DS1.MainPage"
             NavigationPage.HasNavigationBar="False">

    <StackLayout BackgroundColor="LightGray">
        <Frame Padding="24" VerticalOptions="FillAndExpand" CornerRadius="20" Margin="22" HasShadow="False">
            <StackLayout Spacing="30">
                <Label Text="AireBNB" 
                       HorizontalTextAlignment="Center" 
                       TextColor="Blue" 
                       FontSize="36"/>
                <Image Source="https://i.ibb.co/cgCzTQH/aire.png" />
                <Button Text="Login" 
                        TextTransform="None" 
                        BackgroundColor="LightBlue" 
                        CornerRadius="20" 
                        FontAttributes="Bold"
                        x:Name="btnLogin"
                        Clicked="btnLogin_Clicked"/>
                <Button Text="Register" 
                        TextTransform="None" 
                        BackgroundColor="CornflowerBlue" 
                        CornerRadius="20" 
                        FontAttributes="Bold"
                        x:Name="btnRegister"
                        Clicked="btnRegister_Clicked"/>
            </StackLayout>
        </Frame>


    </StackLayout>
    
</ContentPage>
