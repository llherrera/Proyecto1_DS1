<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto1_DS1.NewFolder.Login"
             NavigationPage.HasNavigationBar="False">
    <Grid>
        <StackLayout Margin="20">
            <Frame HasShadow="False" CornerRadius="20">
                <Entry Keyboard="Default" Placeholder="Username" TextColor="Black"/>
            </Frame>

            <Frame HasShadow="False" CornerRadius="20">
                <Entry Keyboard="Default" IsPassword="True" Placeholder="Password" TextColor="Black"/>
            </Frame>

            <Button Text="Log In" BackgroundColor="LightBlue" CornerRadius="10" FontAttributes="Bold" Margin="0,20,0,0"/>
            <Button Text="Back" 
                    BackgroundColor="Transparent" 
                    HorizontalOptions="Center" 
                    FontAttributes="Bold" 
                    Margin="0,40,0,0"
                    x:Name="btnBack"
                    Clicked="btnBack_Clicked"/>
        </StackLayout>


    </Grid>
</ContentPage>